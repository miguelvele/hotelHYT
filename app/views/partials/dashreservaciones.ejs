<div class="wrapper">
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Usuarios
        <small>it all starts here</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Examples</a></li>
        <li class="active">Blank page</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="box">
        <div class="box-header with-border">
          <a type="button" class="btn btn-success" data-toggle="modal" data-target="#modal-default1">
            AÃ±adir Habitacion
          </a>


          <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
              title="Collapse">
              <i class="fa fa-minus"></i></button>
            <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
              <i class="fa fa-times"></i></button>
          </div>
        </div>
        <div class="box-body">
          <table id="example2" class="table table-bordered table-hover">
            <thead>
              <tr>
                <th>codigo de usuario</th>
                <th>metodo de pago</th>
                <th>fecha de entrada</th>
                <th>fecha de salida</th>
                <th>precio inicial</th>
                <th>adelanto</th>
                <th>precio restante</th>
                <th>total pagado</th>
                <th>costo penalidad</th>
                <th>observaciones</th>

              </tr>
            </thead>
            <tbody>
              <% datos.forEach((elements)=>{ %>
                <tr>
                  <td>
                    <%= elements.CODIGO_USUARIO %>
                  </td>
                  <td>
                    <% if (elements.CODIGO_METODO_PAGO===1) { %>
                      efectivo
                      <% } else if (elements.CODIGO_METODO_PAGO===2) { %>
                        consignacion
                        <% } %>
                  </td>
                  <td>
                    <% const fechaEntrada=new Date(elements.FECHA_ENTRADA); %>
                      <%= fechaEntrada.toISOString().split('T')[0] %>
                  </td>
                  <td>
                    <% const fechaSalida=new Date(elements.FECHA_SALIDA); %>
                      <%= fechaSalida.toISOString().split('T')[0] %>
                  </td>
                  <td>
                    <%= elements.PRECIO_INICIAL %>
                  </td>
                  <td>
                    <%= elements.ADELANTO %>
                  </td>
                  <td>
                    <%= elements.PRECIO_RESTANTE %>
                  </td>
                  <td>
                    <%= elements.TOTAL_PAGADO %>
                  </td>
                  <td>
                    <%= elements.COSTO_PENALIDAD %>
                  </td>
                  <td>
                    <%= elements.OBSERVACIONES %>
                  </td>



                  <td>
                    <a data-toggle="modal" data-target="#modal-default2" class="btn btn-success">
                      <i class="fa fa-edit"></i>
                    </a>
                    <button class="btn btn-danger" onclick="confirmar(`<%= elements.CODIGO_RESERVA %>`)">
                      <i class="fa fa-trash"></i>
                    </button>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
          <form action="generarpdf" method="POST">
            <input type="hidden" name="datos">
            <label for="formato">Formato:</label>
            <select name="formato" id="formato">
              <option value="pdf">PDF</option>
              <option value="excel">Excel</option>
            </select>
            <button type="submit">Generar</button>
          </form>

        </div>

      </div>
      <!-- /.box -->

    </section>
    <!-- /.content -->
