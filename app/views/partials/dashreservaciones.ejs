<div class="wrapper">
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Usuarios
        <small>it all starts here</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Examples</a></li>
        <li class="active">Blank page</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="box">
        <div class="box-header with-border">
          <a type="button" class="btn btn-success" data-toggle="modal" data-target="#modal-default1">
            Añadir Habitacion
          </a>


          <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
              title="Collapse">
              <i class="fa fa-minus"></i></button>
            <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
              <i class="fa fa-times"></i></button>
          </div>
        </div>
        <div class="box-body">
          <table id="example2" class="table table-bordered table-hover">
            <thead>
              <tr>
                <th>codigo de usuario</th>
                <th>metodo de pago</th>
                <th>fecha de entrada</th>
                <th>fecha de salida</th>
                <th>precio inicial</th>
                <th>adelanto</th>
                <th>precio restante</th>
                <th>total pagado</th>
                <th>costo penalidad</th>
                <th>observaciones</th>

              </tr>
            </thead>
            <tbody>
              <% datos.forEach((elements)=>{ %>
                <tr>
                  <td>
                    <%= elements.CODIGO_USUARIO%>
                  </td>
                  <td>
                    <%= elements.CODIGO_ESTADO_HABITACION %>
                  </td>
                  <td>
                    <%= elements.DETALLE %>
                  </td>
                  <td>
                    <%= elements.PRECIO %>
                  </td>



                  <td>
                    <a data-toggle="modal" data-target="#modal-default2" class="btn btn-success">
                      <i class="fa fa-edit"></i>
                    </a>
                    <a class="btn btn-danger" onclick="confirmar(`<%= elements.NUMERO_HABITACION %>`)">
                      <i class="fa fa-trash"></i>
                    </a>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
          <form action="generarpdf" method="POST">
            <input type="hidden" name="datos">
            <label for="formato">Formato:</label>
            <select name="formato" id="formato">
              <option value="pdf">PDF</option>
              <option value="excel">Excel</option>
            </select>
            <button type="submit">Generar</button>
          </form>

        </div>

      </div>
      <!-- /.box -->

    </section>
    <!-- /.content -->
    <div class="modal fade" id="modal-default1">
      <div class="modal-dialog">
        <div class="modal-content">
          <form action="guardarh" method="post">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title">Ingrese la habitacion</h4>
            </div>
            <div class="modal-body">
              


              <div class="form-group">
                <label>Piso</label>
                <select name="CODIGO_PISO" class="form-control">
                  <option value="1">1</option>
                </select>
              </div>


              <div class="form-group">
                <label>Categoria</label>
                <select name="CODIGO_CATEGORIA" class="form-control">
                  <option value="1">Cabaña</option>
                  <option value="3">Cabaña Moderna</option>
                </select>
              </div>


              <div class="form-group">
                <label>Hotel</label>
                <select name="CODIGO_HOTEL" class="form-control">
                  <option value="1">Glamping la polka</option>
                </select>
              </div>
              <label>Estado Habitacion</label>

              <div class="input-group">
                <span class="input-group-addon">@</span>
                <input name="CODIGO_ESTADO_HABITACION" type="number" class="form-control"
                  placeholder="Ingrese el estado de la habitacion">
              </div>
              <div class="form-group">
                <label>Detalle</label>

                <div class="input-group">
                  <span class="input-group-addon">@</span>
                  <input name="DETALLE" type="text" class="form-control"
                    placeholder="Ingrese el detalle de la habitacion">
                </div>

              </div>


              <div class="form-group">


                <label>Precio</label>

                <div class="input-group">
                  <span class="input-group-addon">@</span>
                  <input name="PRECIO" type="number" class="form-control" placeholder="Ingrese el precio">
                </div>
              </div>
              <div class="form-group">
                <label>Estado</label>
                <select name="ESTADO" class="form-control">
                  <option value="1">Activo</option>
                </select>
              </div>

              <div class="form-group">
                <label>Fecha de Creacion</label>

                <div class="input-group">
                  <span class="input-group-addon">@</span>
                  <input name="FECHA_CREACION" type="text" class="form-control"
                    placeholder="Ingrese la fecha de Creacion">
                </div>

              </div>


              <div class="modal-footer">
                <button type="button" class="btn btn-danger pull-left" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-success">Guardar</button>
              </div>
            </div>
          </form>

        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>







    <div class="modal fade" id="modal-default2">
      <div class="modal-dialog">
        <div class="modal-content">
          <form action="actualizar" method="put">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title">Ingrese el nuevo usuario para actualizar</h4>
            </div>
            <div class="modal-body">
              <label>ID</label>

              <div class="input-group">
                <span class="input-group-addon">@</span>
                <input name="ID" type="number" class="form-control" placeholder="Ingrese el id">
              </div>
            </div>
            <div class="modal-body">
              <div class="form-group">

                <label>Tipo de Usuario</label>
                <select name="CODIGO_TIPO_USUARIO" class="form-control">
                  <option value="2">USUARIO</option>
                  <option value="1">ADMIN</option>
                </select>
              </div>
            </div>
            <div class="modal-body">
              <div class="form-group">
                <label>Tipo de Documento</label>
                <select name="TIPO_DOCUMENTO" class="form-control">
                  <option value="Cedula de Ciudadania">Cedula de Ciudadania</option>
                  <option value="Pasaporte">Pasaporte</option>
                </select>
              </div>
            </div>

            <div class="modal-body">
              <label>Documento</label>

              <div class="input-group">
                <span class="input-group-addon">@</span>
                <input name="DOCUMENTO" type="number" class="form-control" placeholder="Ingrese el Documento">
              </div>
            </div>
            <div class="modal-body">
              <label>Nombre</label>

              <div class="input-group">
                <span class="input-group-addon">@</span>
                <input name="NOMBRE" type="text" class="form-control" placeholder="Ingrese el Nombre">
              </div>
            </div>
            <div class="modal-body">
              <label>Apellido</label>

              <div class="input-group">
                <span class="input-group-addon">@</span>
                <input name="APELLIDO" type="text" class="form-control" placeholder="Ingrese el Apellido">
              </div>
            </div>
            <div class="modal-body">
              <label>Correo</label>

              <div class="input-group">
                <span class="input-group-addon">@</span>
                <input name="CORREO" type="text" class="form-control" placeholder="Ingrese el Correo">
              </div>
            </div>
            <div class="modal-body">
              <label>Clave</label>

              <div class="input-group">
                <span class="input-group-addon">@</span>
                <input name="CLAVE" type="text" class="form-control" placeholder="Ingrese una Clave">
              </div>
            </div>
            <div class="modal-body">
              <div class="form-group">
                <label>Estado</label>
                <select name="ESTADO" class="form-control">
                  <option value="1">Activo</option>
                </select>
              </div>
            </div>
            <div class="modal-body">
              <label>Fecha de Creacion</label>

              <div class="input-group">
                <span class="input-group-addon">@</span>
                <input name="FECHA_CREACION" type="text" class="form-control">
              </div>
            </div>

            <div class="modal-footer">
              <button type="button" class="btn btn-danger pull-left" data-dismiss="modal">Cancelar</button>
              <button type="submit" class="btn btn-success">Guardar</button>
            </div>
          </form>

        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>
  </div>
  <!-- /.content-wrapper -->

</div>
<script>
  function confirmar(NUMERO_HABITACION) {
    Swal.fire({
      title: 'estas seguro?',
      text: "quieres borrar realmente esto!" + " " + NUMERO_HABITACION,
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'sizas!'
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.href = `borrarh?id=${NUMERO_HABITACION}`;
        Swal.fire(
          'Borrado mi fa!',
          'ya borramos tu registro mi fa.',
          'success'
        )
      }
    })
  }
</script>