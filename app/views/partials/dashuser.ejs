<!-- Site wrapper -->

<div class="wrapper">
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Usuarios
        <small>it all starts here</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Examples</a></li>
        <li class="active">Blank page</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="box">
        <div class="box-header with-border">
          <a href="tiposusuario" type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-default">
            AÃ±adir usuario
          </a>
          

          <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
              title="Collapse">
              <i class="fa fa-minus"></i></button>
            <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
              <i class="fa fa-times"></i></button>
          </div>
        </div>
        <div class="box-body">
          <table id="example2" class="table table-bordered table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>DOCUMENTO</th>
                <th>NOMBRE</th>
                <th>APELLIDO</th>
                <th>CORREO</th>
                <th>FECHA DE CREACION</th>
              </tr>
            </thead>
            <tbody>
              <% datos.forEach((elements)=>{ %>
                <tr>
                  <td><%= elements.CODIGO_USUARIO %></td>
                  <td><%= elements.DOCUMENTO %></td>
                  <td><%= elements.NOMBRE %></td>
                  <td><%= elements.APELLIDO %></td>
                  <td><%= elements.CORREO %></td>
                  <td><%= elements.FECHA_CREACION %></td>
                  
                  <td>
                    <a href="edit-user?id=<%= elements.ID %>&name=<%= elements.NAME %>" class="btn btn-success">
                      <i class="fa fa-edit"></i>
                    </a>
                    <button class="btn btn-danger">
                      <i class="fa fa-trash"></i>
                    </button>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
          <form action="generarpdf" method="POST">
            <input type="hidden" name="datos">
            <label for="formato">Formato:</label>
            <select name="formato" id="formato">
              <option value="pdf">PDF</option>
              <option value="excel">Excel</option>
            </select>
            <button type="submit">Generar</button>
          </form>
          
        </div>

      </div>
      <!-- /.box -->

    </section>
    <!-- /.content -->
    <div class="modal fade" id="modal-default">
      <div class="modal-dialog">
        <div class="modal-content">
          <form action="guardar" method="post">
            <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Ingrese el nuevo usuario</h4>
          </div>
          
          <div class="modal-body">
            <div class="form-group">
            <label>Tipo de Usuario</label>
            <select name="CODIGO_TIPO_USUARIO" class="form-control">
              <option  value="2">USUARIO</option>
                <option value="1">ADMIN</option>
            </select>
          </div>
          </div>
          <div class="modal-body">
            <div class="form-group">
            <label>Tipo de Documento</label>
            <select name="TIPO_DOCUMENTO" class="form-control">
              <option  value="Cedula de Ciudadania">Cedula de Ciudadania</option>
                <option value="Pasaporte">Pasaporte</option>
            </select>
          </div>
          </div>
          
          <div class="modal-body">
            <label>Documento</label>

            <div class="input-group">
              <span class="input-group-addon">@</span>
              <input name="DOCUMENTO" type="number" class="form-control" placeholder="Ingrese el Documento">
            </div>
          </div>
          <div class="modal-body">
            <label>Nombre</label>

            <div class="input-group">
              <span class="input-group-addon">@</span>
              <input name="NOMBRE" type="text" class="form-control" placeholder="Ingrese el Nombre">
            </div>
          </div>
          <div class="modal-body">
            <label>Apellido</label>

            <div class="input-group">
              <span class="input-group-addon">@</span>
              <input name="APELLIDO" type="text" class="form-control" placeholder="Ingrese el Apellido">
            </div>
          </div>
          <div class="modal-body">
            <label>Correo</label>

            <div class="input-group">
              <span class="input-group-addon">@</span>
              <input name="CORREO" type="text" class="form-control" placeholder="Ingrese el Correo">
            </div>
          </div>
          <div class="modal-body">
            <label>Clave</label>

            <div class="input-group">
              <span class="input-group-addon">@</span>
              <input name="CLAVE" type="text" class="form-control" placeholder="Ingrese una Clave">
            </div>
          </div>
          <div class="modal-body">
            <div class="modal-body">
              <div class="form-group">
              <label>Estado</label>
              <select name="ESTADO" class="form-control">
                <option  value="1">Activo</option>
              </select>
            </div>
            </div>
         </div>
          <div class="modal-body">
            <label>Fecha de Creacion</label>

            <div class="input-group">
              <span class="input-group-addon">@</span>
              <input name="FECHA_CREACION" type="text" class="form-control" >
            </div>
          </div>
         
          <div class="modal-footer">
            <button type="button" class="btn btn-danger pull-left" data-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-primary">Guardar</button>
          </div>
          </form>
          
        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>
  </div>
  <!-- /.content-wrapper -->

</div>
<!-- ./wrapper -->